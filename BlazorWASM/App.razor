<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(App).Assembly">
        <Found Context="routeData">
            <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)">
                <NotAuthorized>
                    <img width="600" src="https://i.kym-cdn.com/entries/icons/original/000/002/144/You_Shall_Not_Pass!_0-1_screenshot.jpg"/>
                    <p>Du er ikke logget ind!</p>
                </NotAuthorized>
            </AuthorizeRouteView>
            <FocusOnNavigate RouteData="@routeData" Selector="h1"/>
        </Found>
        <NotFound>
            <PageTitle>Siden ikke fundet</PageTitle>
            <LayoutView Layout="@typeof(MainLayout)">
                <p role="alert">Beklager, der er intet at finde på denne adresse.</p>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>